@using Web.Models;
@model IList<Post>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagatitle">
        <h2>Danh sách bài viết</h2>
    </div>
    <p>
        <a type="button" class="btn-succes" asp-area="Admin" asp-controller="Post" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i>Thêm Post
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-3 text-center">Title</th>
                                    <th class="col-3 text-center">Abstract</th>
                                    <td class="col-2 text-center">Contents</td>
                                    <td class="col-2 text-center">Images</td>
                                    <td class="col-1 text-center">Link</td>
                                    <td class="col-1 text-center">PostOrder</td>
                                    <th class="col-2 text-center">Chức năng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr id=" tr_@item.PostID">
                                        <td>@(i++)</td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Menu" asp-action="Details"
                                               aps-route-id="@item.PostID" class="text-primary">@item.Title</a>
                                        </td>
                                        <td class="text-center">@item.Abstract</td>
                                        <td class="text-center">@item.Contents</td>
                                        <td class="text-center">
                                            <img src="@item.Images" alt="Image" class="img-thumbnail" />
                                        </td>
                                        <td class="text-center">@item.Link</td>
                                        <td class="text-center">@item.PostOrder</td>

                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Post" asp-action="Edit"
                                               asp-route-id="@item.PostID" class="btn btn-primary btn-sm"
                                               tilte="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="Post" asp-action="Delete"
                                               asp-route-id="@item.PostID" class="btn btn-danger btn-sm"
                                               tilte="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
